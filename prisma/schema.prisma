generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    // Primary key
    id String @id @default(uuid()) @db.Uuid

    // Attributes
    nickname String
    email    String @unique
    password String

    // Timestamps
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // References
    sessions Session[]
}

model Session {
    // Primary key
    id String @id @default(uuid()) @db.Uuid

    // Foreign keys
    userId String @db.Uuid
    user   User   @relation(fields: [userId], references: [id])

    // Attributes
    expires DateTime
}
